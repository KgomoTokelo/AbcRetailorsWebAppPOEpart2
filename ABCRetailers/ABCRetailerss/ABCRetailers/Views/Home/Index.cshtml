@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Tailwind CDN (if not already included in your layout) -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 py-10 px-6">

    <!-- Header -->
    <div class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-600 flex items-center justify-center gap-2">
            <i class="fa-solid fa-shop text-yellow-500 animate-bounce"></i>
            <span>Welcome to ABC Retailers!</span>
        </h1>
        <p class="mt-3 text-gray-600 text-lg">
            🌟 Your one-stop shop for <span class="font-semibold text-indigo-500">unbeatable deals</span> and the latest trends.
        </p>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        <a asp-controller="Customer" asp-action="Index"
           class="bg-gradient-to-br from-indigo-500 to-blue-600 hover:from-blue-600 hover:to-indigo-700
                  text-white rounded-2xl shadow-lg transform hover:-translate-y-1 transition-all duration-200
                  flex flex-col items-center justify-center py-8">
            <i class="fa-solid fa-users fa-2x mb-3"></i>
            <span class="text-lg font-semibold">Customers</span>
            <small class="text-white/80 mt-1">(@Model?.CustomerCount)</small>
        </a>

        <a asp-controller="Product" asp-action="Index"
           class="bg-gradient-to-br from-green-400 to-emerald-600 hover:from-emerald-600 hover:to-green-700
                  text-white rounded-2xl shadow-lg transform hover:-translate-y-1 transition-all duration-200
                  flex flex-col items-center justify-center py-8">
            <i class="fa-solid fa-boxes-stacked fa-2x mb-3"></i>
            <span class="text-lg font-semibold">Products</span>
            <small class="text-white/80 mt-1">(@Model?.ProductCount)</small>
        </a>

        <a asp-controller="Order" asp-action="Index"
           class="bg-gradient-to-br from-amber-400 to-orange-500 hover:from-orange-500 hover:to-amber-600
                  text-white rounded-2xl shadow-lg transform hover:-translate-y-1 transition-all duration-200
                  flex flex-col items-center justify-center py-8">
            <i class="fa-solid fa-cart-shopping fa-2x mb-3"></i>
            <span class="text-lg font-semibold">Orders</span>
            <small class="text-white/80 mt-1">(@Model?.OrderCount)</small>
        </a>

        <a asp-controller="Upload" asp-action="Index"
           class="bg-gradient-to-br from-teal-400 to-cyan-600 hover:from-cyan-600 hover:to-teal-700
                  text-white rounded-2xl shadow-lg transform hover:-translate-y-1 transition-all duration-200
                  flex flex-col items-center justify-center py-8">
            <i class="fa-solid fa-cloud-arrow-up fa-2x mb-3"></i>
            <span class="text-lg font-semibold">Uploads</span>
            <small class="text-white/80 mt-1">(Payment Proofs)</small>
        </a>
    </div>

    <!-- Featured Products -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
            <i class="fa-solid fa-star text-yellow-500"></i> Featured Products ✨
        </h2>

        @if (Model?.FeaturedProducts?.Any() == true)
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                @foreach (var product in Model.FeaturedProducts.Take(8))
                {
                    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-200 overflow-hidden">
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.ProductName"
                                 class="h-48 w-full object-cover">
                        }
                        else
                        {
                            <div class="h-48 w-full flex items-center justify-center bg-gray-100 text-gray-400">
                                <i class="fa-solid fa-image fa-2x"></i>
                            </div>
                        }

                        <div class="p-4 flex flex-col h-full">
                            <h3 class="text-center text-gray-800 font-semibold mb-2">@product.ProductName</h3>
                            <p class="text-sm text-gray-500 text-center flex-grow">
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    @product.Description.Substring(0, Math.Min(product.Description.Length, 60))
                                    ;
                                }
                            </p>
                            <div class="mt-4 text-center">
                                <p class="text-lg font-bold text-emerald-600">@product.Price.ToString("C")</p>
                                <p class="text-xs text-gray-500">Stock: @product.StockAvailable</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="mt-6 bg-blue-50 border-l-4 border-blue-400 text-blue-700 p-4 rounded-md shadow-sm">
                <i class="fa-solid fa-circle-info"></i> No products available yet.
                <a asp-controller="Product" asp-action="Create" class="underline font-semibold hover:text-blue-800">
                    Add your first product
                </a>!
            </div>
        }
    </div>
</div>
