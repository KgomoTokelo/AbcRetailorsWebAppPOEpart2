@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<!-- Custom CSS from Creatlydev -->
<style>
    .card {
        margin: auto;
        width: min(300px, 100%);
        background-color: #fefefe;
        border-radius: 1rem;
        padding: 0.5rem;
        color: #141417;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .card__hero {
        background-color: #fef4e2;
        border-radius: 0.5rem 0.5rem 0 0;
        padding: 1.5rem;
        font-size: 0.875rem;
    }

        .card__hero img {
            border-radius: 0.5rem;
            max-height: 160px;
            object-fit: cover;
            width: 100%;
        }

        .card__hero .card__job-title {
            margin-top: 1rem;
            font-size: 1.25rem;
            font-weight: 600;
            color: #141417;
        }

    .card__footer {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.75rem;
    }

    @@media (min-width: 340px) {
        .card__footer

    {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    }

    .card__btn {
        font-weight: 500;
        border: none;
        display: block;
        cursor: pointer;
        text-align: center;
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        background-color: #141417;
        color: #fff;
        font-size: 1rem;
        transition: background-color 0.2s ease;
    }

        .card__btn:hover {
            background-color: #333;
        }
</style>

<div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-semibold text-gray-800 flex items-center gap-2">
        <i class="fas fa-box text-indigo-600"></i> Products
    </h2>
    <a asp-action="Create"
       class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg shadow-md transition flex items-center gap-2">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @foreach (var p in Model)
        {
            var shortId = !string.IsNullOrWhiteSpace(p?.Id)
            ? (p.Id.Length > 8 ? p.Id.Substring(0, 8) + "…" : p.Id)
            : "-";
            var stock = p?.StockAvailable ?? 0;
            var stockColor = stock > 10 ? "🟢" : stock > 0 ? "🟡" : "🔴";
            var desc = p?.Description ?? "";

            <div class="card">
                <div class="card__hero">
                    @if (!string.IsNullOrWhiteSpace(p?.ImageUrl))
                    {
                        <img src="@p.ImageUrl" alt="@p.ProductName" />
                    }
                    else
                    {
                        <div class="flex items-center justify-center w-full h-40 bg-gray-100 text-gray-400 rounded-lg">
                            <i class="fas fa-image fa-2x"></i>
                        </div>
                    }

                    <div class="card__job-title">@p?.ProductName</div>
                </div>

                <div class="card__footer">
                    <div class="flex flex-col">
                        <span>ID: <code>@shortId</code></span>
                        <span>Stock: @stockColor @stock</span>
                        <span>Price: <strong>@p?.Price.ToString("C")</strong></span>
                    </div>

                    <div class="flex gap-2 mt-2 sm:mt-0">
                        <a asp-action="Edit" asp-route-id="@p?.Id" class="card__btn bg-indigo-600 hover:bg-indigo-700">Edit</a>
                        <button type="button"
                                onclick="confirmDelete('@p?.Id','@p?.ProductName')"
                                class="card__btn bg-red-600 hover:bg-red-700">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="bg-blue-50 border-l-4 border-blue-500 text-blue-700 p-4 rounded-lg">
        <p>
            <i class="fas fa-info-circle"></i> No products found.
            <a asp-action="Create" class="underline font-medium hover:text-blue-800">Add your first product</a>!
        </p>
    </div>
}

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 z-50 hidden bg-black/50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl w-96 p-6">
        <h5 class="text-lg font-semibold mb-3">Confirm Delete</h5>
        <p class="text-gray-600 mb-4">
            Are you sure you want to delete product <strong id="productName"></strong>?
        </p>
        <div class="flex justify-end gap-3">
            <button type="button" onclick="closeModal()"
                    class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md">
                Cancel
            </button>
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-md">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName || '';
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Product")/' + encodeURIComponent(productId || '');
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }
    </script>
}
